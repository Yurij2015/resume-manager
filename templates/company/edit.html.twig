{% extends 'base.html.twig' %}
{% block title %}Edit Company - {% endblock %}
{% block body %}
    <div class="wrapper">
        {{ include('layouts/_navbar.html.twig') }}
        {{ include('layouts/_sidebar.html.twig') }}
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Edit Company - {{ company.name }}</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Companies</a></li>
                                <li class="breadcrumb-item active">Index</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Edit company</h3>
                                </div>
                                {{ include('company/_form.html.twig', {'button_label': 'Update'}) }}
                            </div>
                            {{ include('company/_delete_form.html.twig') }}
                            <a href="{{ path('app_company_index') }}" class="btn btn-info btn-sm mt-1 mb-2">back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('layouts/_footer.html.twig') }}
    </div>
{% endblock %}
