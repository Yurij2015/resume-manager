<form method="post" action="{{ path('sent_resume_save', {'resume': resume.id}) }}">
    <div class="form-group">
        <div class="card-body">
            <input type="hidden" name="resume" value="{{ csrf_token('resume' ~ resume.id) }}">
            <label for="countrySelect">Select company</label>
            <select id="countrySelect" name="selectedCompany" class="form-control">
                {% for company in companies %}
                    <option value="{{ company.id }}">{{ company.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary btn-sm">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</form>
